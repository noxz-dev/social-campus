{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["esnext"],
    "outDir": "./dist",
    "sourceMap": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "typeRoots": ["src/utils/types", "node_modules/@types"],
    "paths": {
      "*": ["./src/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts"]
}
