{
   "compilerOptions": {
     "module": "commonjs",
     "target": "ES2020",
     "lib": ["ES2020"],
     "sourceMap": true,
     "outDir": "./dist",
     "moduleResolution": "node",
     "experimentalDecorators": true,
     "emitDecoratorMetadata": true,
     "esModuleInterop": true,
     "baseUrl": ".",
     "typeRoots": ["src/utils/types", "node_modules/@types"],
     "paths": {
       "*": ["./src/*"]
     }
   },
   "exclude": ["node_modules"],
   "include": ["./src/**/*.ts"]
 }
 